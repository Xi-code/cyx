<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyx.mapper.FoodsMapper">

    <insert id="insert">
        insert into foods (name,descr,price,img)
        values (#{name}, #{descr}, #{price},#{img})
    </insert>


    <update id="updateById">
        update foods
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="descr != null">descr = #{descr},</if>
            <if test="price != null">price = #{price},</if>
            <if test="img != null">img = #{img}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteById">
        delete
        from foods
        where id = #{id}
    </delete>

    <select id="selectAll" resultType="com.cyx.entity.Foods">
        select foods.* from foods
        <where>
            <if test="name != null">
                foods.name like concat('%', #{name}, '%')
            </if>
        </where>
        order by id desc
    </select>

    <select id="selectByName" resultType="com.cyx.entity.Foods">
        SELECT * FROM foods WHERE name = #{name}
    </select>

    <select id="selectByCondition" resultType="com.cyx.entity.Foods">
        SELECT * FROM foods
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="minPrice != null">
                AND price &gt;= #{minPrice}
            </if>
            <if test="maxPrice != null">
                AND price &lt;= #{maxPrice}
            </if>
        </where>
        ORDER BY id DESC
    </select>


</mapper>